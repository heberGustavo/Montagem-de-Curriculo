@model Montagem_de_Curriculo.Models.TipoCurso

@{
    ViewData["Title"] = "Tipos de cursos cadastrados";
}

<div class="formulario">

    <h4>Tipos de cursos cadastrados</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="input-field col s6">
                        <input asp-for="Tipo" id="Tipo" type="text" class="validade" />
                        <label for="Tipo">Tipo de Curso</label>
                        <span asp-validation-for="Tipo" class="red-text darken-3"></span>
                    </div>
                </div>

                <div class="row">
                    <input type="submit" value="Salvar" class="btn btn-small green darken-1" /> &nbsp;
                    <a asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>
